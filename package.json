{
  "name": "commander",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --ignore-watch node_modules  ./src/app/index.ts",
    "start": "node dist/index.js",
    "test:unit": "jest",
    "test:unit:coverage": "jest && cd coverage/lcov-report && npx serve",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "lint": "tslint src/**/*.ts{,x}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.0",
    "express-validator": "^6.12.2",
    "glob": "^7.2.0",
    "http-status": "^1.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/cucumber": "^7.0.0",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.1.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/supertest": "^2.0.11",
    "cucumber": "^6.0.7",
    "jest": "^27.2.4",
    "lint-staged": "11.2.0",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "~1.18.0"
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
